<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Панель</title>
    <meta name="description" content="админка" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="img/logo.png" />
    <link rel="stylesheet" href="/css/panel2.css" />
    <!-- Добавляем иконку для мобильного меню -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <header class="dashboard-header">
            <button class="mobile-menu-toggle">
                <i class="fas fa-bars"></i>
            </button>
            <h1 class="dashboard-header__logo">Панель администратора</h1>
        </header>
        <nav class="sidebar-menu">
            <ul class="sidebar-menu__items">
                <li class="sidebar-menu__item">
                    <a href="/panel" class="sidebar-menu__item-title">
                        <span>Просмотр текущих отзывов</span>
                    </a>
                </li>
                <li class="sidebar-menu__item">
                    <a href="/panel2" class="sidebar-menu__item-title">
                        <span>Пользователи</span>
                    </a>
                </li>
                <li class="sidebar-menu__item">
                    <a href="/panel3" class="sidebar-menu__item-title">
                        <span>Добавить Товар</span>
                    </a>
                </li>
                <li class="sidebar-menu__item">
                    <a href="/" class="sidebar-menu__item-title">
                        <span>Назад</span>
                    </a>
                </li>
            </ul>
        </nav>
        <main class="main-content">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>name</th>
                            <th>text</th>
                            <th>photo</th>
                            <th>createdAt</th>
                            <th>deletedAt</th>
                            <th>Удалить</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each reviews}}
                            <tr>
                                <td data-label="">{{this.id}}</td>
                                <td data-label="">{{this.name}}</td>
                                <td data-label="">{{this.text}}</td>
                                <td data-label="">{{this.photo}}</td>
                                <td data-label="">{{formatDate this.createdAt}}</td>
                                <td data-label="">{{#if this.deletedAt}}{{formatDate this.deletedAt}}{{else}}-{{/if}}</td>
                                <td data-label="">
                                    <button type="submit" class="btn" data-id="{{this.id}}">Удалить</button>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </main>
    </div>
    <script src="/js/panel.js"></script>
</body>
</html>